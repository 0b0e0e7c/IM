{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run user rpc",
      "type": "shell",
      "command": "go build -o bin/user-service.exe ./user-service/cmd/rpc/user.go && ./bin/user-service.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Run friend rpc",
      "type": "shell",
      "command": "go build -o bin/friend-service.exe ./friend-service/cmd/rpc/friend.go && ./bin/friend-service.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Run userapi",
      "type": "shell",
      "command": "go build -o bin/user-api.exe ./user-service/cmd/gin/. && ./bin/user-api.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Build userapi"
    }
  ]
}
