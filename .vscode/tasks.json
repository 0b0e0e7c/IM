{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build user rpc",
      "type": "shell",
      "command": "go build -o bin/userservice.exe ./user-service/cmd/rpc/user.go",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
    },
    {
      "label": "Run user rpc",
      "type": "shell",
      "command": "${workspaceFolder}/bin/userservice.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Build user rpc",
    },
    {
      "label": "Build userapi",
      "type": "shell",
      "command": "go build -o bin/userapi.exe ./user-service/cmd/gin/.",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
    },
    {
      "label": "Run userapi",
      "type": "shell",
      "command": "${workspaceFolder}/bin/userapi.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Build userapi",
    }
  ]
}
