{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build user",
      "type": "shell",
      "command": "go build -o bin/user.exe ./user-service/cmd/api/user.go",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
      "detail": "bin/user.exe"
    },
    {
      "label": "Run user",
      "type": "shell",
      "command": "${workspaceFolder}/bin/user.exe",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Build user",
      "detail": "运行编译后的 Go 程序"
    }
  ]
}
